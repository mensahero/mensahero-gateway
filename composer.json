{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "marjose123/laravel-nuxtui-starter-kit",
    "type": "project",
    "description": "The starter kit application for the Laravel framework that utilizes Vue, NuxtUi, TailwindCss, and other Laravel packages.",
    "keywords": [
        "laravel",
        "framework",
        "starter-kit",
        "nuxtui-laravel",
        "laravel-nuxtui-starter-kit",
        "laravel nuxt-ui"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/marjose123/laravel-nuxtui-starter-kit/issues",
        "source": "https://github.com/marjose123/laravel-nuxtui-starter-kit"
    },
    "authors": [
        {
            "name": "MarJose Darang",
            "email": "hypernate1@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-curl": "*",
        "ext-json": "*",
        "dedoc/scramble": "^0.12.35",
        "erag/laravel-disposable-email": "^3.7",
        "inertiajs/inertia-laravel": "^2.0",
        "jaybizzle/crawler-detect": "^1.3",
        "lacodix/laravel-model-filter": "^3.6",
        "laravel/fortify": "^1.30",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/socialite": "^5.23",
        "laravel/tinker": "^2.10.1",
        "mobiledetect/mobiledetectlib": "^4.8",
        "propaganistas/laravel-phone": "^6.0",
        "scalar/laravel": "^0.2.0",
        "socialiteproviders/google": "^4.1",
        "socialiteproviders/zoho": "^4.1",
        "socialiteproviders/zoom": "^4.0",
        "stevebauman/location": "^7.6",
        "tightenco/ziggy": "^2.6"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.0",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.7",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-browser": "^4.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "rector/rector": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "setup": [
            "composer install",
            "@php -r \"! file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force",
            "bun install",
            "bun run build"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "bunx concurrently \"composer mailpit\" \"php artisan queue:listen --tries=1\" \"php artisan schedule:work\" \"bun run dev\" --names=mailserver,queue,scheduler,vite --kill-others  -c auto"
        ],
        "format:be": [
            "vendor/bin/pint"
        ],
        "format:fe": [
            "bun run format",
            "bun run lint"
        ],
        "format": [
            "@format:be",
            "@format:fe"
        ],
        "mailpit": [
            "Composer\\Config::disableProcessTimeout",
            ".bin/mailpit.exe --smtp-auth-accept-any --smtp-auth-allow-insecure --use-message-dates --tags-username"
        ],
        "mailpit:update": [
            "Composer\\Config::disableProcessTimeout",
            "@php .bin/updater.php"
        ],
        "rector": [
            "vendor/bin/rector process --ansi"
        ],
        "rector:check": [
            "vendor/bin/rector process --dry-run --ansi"
        ],
        "analyse": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpstan analyse --memory-limit=2G --ansi"
        ],
        "playwright:install": [
            "echo Installing Playwright.",
            "bun install playwright@latest",
            "bunx playwright install"
        ],
        "playwright:cleanup": [
            "echo Cleaning up Playwright.",
            "bunx playwright uninstall --all"
        ],

        "test:browser": [
            "php artisan test --testsuite=Browser --bail"
        ],

        "test:features": [
            "php artisan test --testsuite=Feature --bail"
        ],

        "test:api": [
            "php artisan test --testsuite=Api --bail"
        ],

        "test": [
            "@php artisan config:clear --ansi",
            "@test:api",
            "@test:features",
            "@test:browser"

        ]
    },
    "scripts-descriptions": {
        "setup": "Setup the project by installing all the dependencies and running the db migrations",
        "dev": "Run the development server",
        "dev:ssr": "Run the development server with SSR",
        "playwright:install": "Install Playwright",
        "playwright:cleanup": "Cleanup Playwright",
        "test:browser": "Run the browser tests",
        "test:features": "Run the feature tests",
        "test:Api": "Run the API tests",
        "test": "Run the whole suite tests",
        "format:be": "Fixing the Code Style according to PER standards for the backend code",
        "format:fe": "Fixing the Code Style according to PER standards for the frontend code",
        "format": "Fixing the Code Style according to PER standards for both backend and frontend code",
        "mailpit": "Run the mailpit server for testing emails",
        "rector": "Fixing the code according to the Rector Rules",
        "rector:check": "Showing the suggested changes from Rector",
        "analyse": "Analyse the code with PHPStan code analysis"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
